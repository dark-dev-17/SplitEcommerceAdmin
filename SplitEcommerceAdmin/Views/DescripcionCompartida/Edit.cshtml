@model SplitAdminEcomerce.Models.DescripcionCompartida

@{
    ViewData["Title"] = "Edit";
}
@if(ViewBag.Message != null)
{
<div class="alert alert-info alert-dismissible mg-b-0 fade show" role="alert">
    <strong>Estimado usuario!</strong> @ViewBag.Message
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
<hr />
}
<div >
    <form asp-action="Edit" asp-controller="DescripcionCompartida" id="form-descripLarga" class="" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Clave" class="control-label"></label>
            <input asp-for="IdDescripcionCompartida" readonly type="hidden" class="form-control" />
            <input asp-for="Clave" class="form-control" />
            <span asp-validation-for="Clave" class="text-danger"></span>
        </div><!-- form-group -->
        <div class="form-group">
            <label asp-for="Descripcion" class="control-label"></label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div><!-- form-group -->
        <div class="form-group">
            <label asp-for="CEO" class="control-label"></label>
            <textarea asp-for="CEO" class="form-control"></textarea>
            <span asp-validation-for="CEO" class="text-danger"></span>
        </div><!-- form-group -->
        <div class="form-group tx-13 tx-color-04">
            Todos los campos de esta sección son utilizados por mas de un producto
        </div>
        <hr class="op-0">
        <button class="btn btn-brand-02" type="submit">Guardar cambios</button>
        <button class="btn btn-white mg-l-2">Cancelar</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
