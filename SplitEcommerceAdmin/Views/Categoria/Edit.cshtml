@model SplitAdminEcomerce.Models.Categoria

@{
    ViewData["Title"] = "Editar categoria: " + Model.DescripcionFamilia;
}
@if (ViewBag.MessageSuccess != null)
{
    <div class="alert alert-success mg-b-0" role="alert">
        <h6 class="alert-heading">Estimado usuario!</h6>
        <p>@ViewBag.MessageSuccess</p>
        <hr>
        <p class="mb-0">Atte: Administrador Ecommerce Grupo Splittel.</p>

    </div>
    <hr />
}
<div data-label="Informacion" class="df-example demo-forms">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Codigo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input type="hidden" asp-for="IdCategoria" class="form-control" />
                <input type="hidden" asp-for="Orden" class="form-control" />
                <input type="hidden" asp-for="id_imagen" class="form-control" />
                <input asp-for="Codigo" class="form-control" readonly />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DescripcionFamilia" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DescripcionFamilia" class="form-control" />
                <span asp-validation-for="DescripcionFamilia" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Descripcion" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group form-check col-lg-2">

            </div>
            <div class="form-group form-check col-lg-3 text-left">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Che_Activo" /> @Html.DisplayNameFor(model => model.Che_Activo)
                </label>
            </div>
            <div class="form-group form-check col-lg-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Che_ActivoInfoTec" /> @Html.DisplayNameFor(model => model.Che_ActivoInfoTec)
                </label>
            </div>
            <div class="form-group form-check col-lg-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Che_ActivoInfoTec2" /> @Html.DisplayNameFor(model => model.Che_ActivoInfoTec2)
                </label>
            </div>
        </div>
        <div class="form-group row mg-b-0">
            <div class="col-sm-12 text-right">
                <a class="btn btn-sm btn-secondary" asp-action="Index">Regresar</a>
                <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
