@model SplitAdminEcomerce.Models.PrecioCableServ

@if (ViewBag.MessageSuccess != null)
{
    <div class="alert alert-success mg-b-0" role="alert">
        <h6 class="alert-heading">Estimado usuario!</h6>
        <p>@ViewBag.MessageSuccess</p>
        <hr>
        <p class="mb-0">Atte: Administrador Ecommerce Grupo Splittel. @DateTime.Now.ToString()</p>

    </div>
    <hr />
}

<form asp-action="CableServEdit" asp-controller="PrecioConfigurable" class="Split_form" data-resultDiv="modal_cont">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Componente" class="control-label"></label>
        <input asp-for="IdPrecioCableServ" type="hidden" class="form-control" />
        <input asp-for="Componente" disabled class="form-control" />
        <span asp-validation-for="Componente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio" class="control-label"></label>
        <input type="number" asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group row mg-b-0">
        <div class="col-sm-12 text-right">
            @if (ViewBag.MessageSuccess != null)
            {
                <button class="btn btn-sm btn-secondary" data-dismiss="modal">Cerrar</button>
            }
            else
            {
                <button class="btn btn-sm btn-secondary" data-dismiss="modal">Cancelar</button>
            }

            <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
        </div>
    </div>
</form>