@model SplitAdminEcomerce.Models.Blog

@{
    ViewData["Title"] = "Crear nuevo blog";
}
@if (ViewBag.MessageSuccess != null)
{
    <div class="alert alert-success mg-b-0" role="alert">
        <h6 class="alert-heading">Estimado usuario!</h6>
        <p>@ViewBag.MessageSuccess</p>
        <hr>
        <p class="mb-0">Atte: Administrador Ecommerce Grupo Splittel.</p>

    </div>
    <hr />
}
<link href="~/lib/summernote/summernote.min.css" rel="stylesheet">
<div id="app_Blog" data-label="Informacion" class="df-example demo-forms">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Titulo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="hidden" asp-for="IdBlog" class="form-control" />
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Titulo2" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Titulo2" class="form-control" />
                <span asp-validation-for="Titulo2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Contenido1" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Contenido1" class="form-control" />
                <span asp-validation-for="Contenido1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="WebDescripcion" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="WebDescripcion" class="form-control" />
                <span asp-validation-for="WebDescripcion" class="text-danger"></span>
            </div>
            <div class="form-check col-lg-4">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Che_Activo" /> @Html.DisplayNameFor(model => model.Che_Activo)
                </label>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ImgCaratulaFile" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <img src="#" id="ImgCaratulaPrev" class="img-thumbnail" alt="Imagen de portada" style="height: 200px;align-content: center;">
            </div>
            <label asp-for="ImgLandingFile" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <img src="#" id="ImgLandingPrev" class="img-thumbnail" alt="Imagen del blog" style="height: 200px;align-content: center;">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="file" asp-for="ImgCaratulaFile" class="form-control" />
                <span asp-validation-for="ImgCaratulaFile" class="text-danger"></span>
            </div>
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="file" asp-for="ImgLandingFile" class="form-control" />
                <span asp-validation-for="ImgLandingFile" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Contenido2" class="col-sm-12 col-form-label"></label>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <textarea id="summernote" asp-for="Contenido2" class="form-control"></textarea>
                <span asp-validation-for="Contenido2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mg-b-0">
            <div class="col-sm-12 text-right">
                <a class="btn btn-sm btn-secondary" asp-action="Index">Regresar</a>
                <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/summernote/summernote.min.js"></script>
    <script>
        var app_Blog = new Vue({
            el: "#app_Blog",
            data: {
            },
            mounted() {
                $('#summernote').summernote({
                    height: 650
                });

                GlobalImgPreview("ImgCaratulaFile","ImgCaratulaPrev");
                GlobalImgPreview("ImgLandingFile","ImgLandingPrev");
            },
            methods: {

            }
        });
    </script>
}